            <kind>1</kind>
            <string>/// Step Event - move note and check hit/miss
if (!isPlayer)
{
    y -= speed;  // still move the note
    if (y &lt; global.offset_y) instance_destroy();
    exit;        // skip hit detection
}

var song_pos = audio_sound_get_track_position(global.stream);

// move note upward
y -= global.scroll_speed;

// timing difference
var diff = abs(song_pos - note_time);

// check correct key
var hit = false;
switch (dir)
{
    case 0: if obj_input.lef hit = true; break;
    case 1: if obj_input.dow hit = true; break;
    case 2: if obj_input.upp hit = true; break;
    case 3: if obj_input.rig hit = true; break;
}

// hitbox window (distance to receptor)
var inside_y = (abs(y - global.offset_y - 5) &lt;= 30);

// hit windows in seconds
var perfect = 0.025;
var good    = 0.050;
var bad     = 0.070;

// HIT
if (inside_y &amp;&amp; hit)
{
    if (diff &lt;= perfect) scr_show_score(4);
    else if (diff &lt;= good) scr_show_score(3);
    else if (diff &lt;= bad) scr_show_score(2);
    else scr_show_score(1);

    instance_destroy();
}

// MISS (scrolled past receptor)
if (y &lt; global.offset_y - 100)
{
    scr_show_score(0);
    instance_destroy();
}

</string>
